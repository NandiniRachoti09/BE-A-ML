import re

class Chatbot:
    def __init__(self):
        self.context = None

    def respond_to_greeting(self):
        self.context = "greeting"
        return "Hello! How can I help you today?"

    def respond_to_farewell(self):
        self.context = None
        return "Goodbye! Have a great day!"

    def respond_to_thank_you(self):
        self.context = None
        return "You're welcome! Anything else I can assist you with?"

    def respond_to_weather(self):
        self.context = "weather"
        return "Sure, I can tell you about the weather. Which city's weather would you like to know about?"

    def respond_to_city_weather(self, city):
        # Mock response for weather
        self.context = None
        return f"The weather in {city} is sunny with a chance of rain."

    def respond_to_default(self):
        return "I'm sorry, I don't understand. Can you please rephrase?"

    def get_response(self, user_input):
        user_input = user_input.lower()

        if re.search(r'\bhello\b|\bhi\b|\bhey\b', user_input):
            return self.respond_to_greeting()
        elif re.search(r'\bbye\b|\bgoodbye\b', user_input):
            return self.respond_to_farewell()
        elif re.search(r'\bthank\b', user_input):
            return self.respond_to_thank_you()
        elif re.search(r'\bweather\b', user_input):
            return self.respond_to_weather()
        elif self.context == "weather" and re.search(r'\b[a-zA-Z]+\b', user_input):
            city = re.search(r'\b[a-zA-Z]+\b', user_input).group(0)
            return self.respond_to_city_weather(city)
        else:
            return self.respond_to_default()

# Main function to run the chatbot
def main():
    bot = Chatbot()
    print("Welcome to the simple rule-based chatbot!")
    print("Type 'exit' to end the conversation.")
    
    while True:
        user_input = input("You: ")
        if user_input.lower() == 'exit':
            print("Chatbot: Goodbye!")
            break
        response = bot.get_response(user_input)
        print(f"Chatbot: {response}")

if __name__ == "__main__":
    main()
